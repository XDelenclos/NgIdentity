
@model NgCooking.Models.RecipesViewModels

@if (Model.Result != null)
{
    foreach (var item in Model.Result)
    {

        <div class="col-xs-6 col-sm-4 col-md-3 recette displayResult">
            <a href='@Url.Action("recipesDetails",new { controller = "Recipes", nom = item.id })'>
                <img src="@Url.Content("~/Content/"+item.picture)" + alt="@item.name" />
                <div class="top" title="note : @item.Comments.Average(r=>r.mark)/5">
                    <span class="note">
                        @for (int i = 0; i < item.Comments.Average(r => r.mark); i++)
                        {
                            <span class="glyphicon glyphicon-heart"></span>
                        }
                    </span>
                </div>
                <div class="bot">
                    <p class="name">@item.name</p>
                    <p class="hide" id="id">@item.id</p>
                </div>
            </a>
        </div>

    }

}
@if (Model.Result == null)
{

    <div class="col-xs-12 recette">
        <p class="col-xs-12 blank">Aucune recette ne correspond à votre recherche</p>
    </div>

}
