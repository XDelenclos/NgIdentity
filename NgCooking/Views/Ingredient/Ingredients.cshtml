@model NgCooking.Models.IngredientViewModels

<h1 class="page-title">Les ingredients</h1>

<div class="row">
    <div class="col-xs-12">
        <div class="panel">
            <div class="row imgback">
                <div class="hidden-xs col-sm-3"></div>
                <div class="col-xs-12 col-sm-9 fp">
                    <div class="filters">

                        <!-- Form -->
                        <form action="" id="Form_Ingredient" method="post">
                            <div class="filter">
                                <p><label for="">Nom de l'ingrédient</label></p>
                                <p><input type="text" name="NameFilter" id="NameFilter" placeholder="ex: Banane"></p>
                            </div>
                            <div class="filter">
                                <p><label for="">Catégorie</label></p>
                                <p>
                                    <select name="CategoryFilter" id="CategoryFilter">
                                        <option value="" name="CategoryFilter" id="CategoryFilter"></option>
                                        @foreach (var item in Model.ListCat)
                                        {
                                            <option value=@item.id.ToString()>@item.nameToDisplay</option>
                                        }
                                    </select>
                                </p>
                            </div>
                            <div class="filter" id="Select_Cal">
                                <p><label for="">Nombre de calories <span class="fwn">(kcal/100g)</span></label></p>
                                <p>
                                    <span class="span-label">entre :</span>
                                    <input type="number" class="mr0" name="CalorieMin" placeholder="ex: 70" id="CalorieMin">
                                    <span class="span-label">et</span>
                                    <input type="number" name="CalorieMax" placeholder="ex: 220" id="CalorieMax">
                                </p>
                                <p>
                                    <br>
                                    <button type="submit" class="btn btn_color1" id="btn_Submit">
                                        Recherche
                                        <span class="glyphicon glyphicon-question-sign" aria-hidden="true" />
                                    </button>

                                </p>
                            </div>
                        </form>
                        <!-- Fin form -->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="result">
            <div class="ingredients row" id="Liste_Ingredients">

                @{Html.RenderPartial("_AffichageListe");}

            </div>
        </div>
        <div class="row showmore">
            <div class="col-xs-12">
                <button type="button" class="btn btn_color1" id="btn_showmore"><span class="glyphicon glyphicon-chevron-down"></span>Afficher d'avantage</button>
            </div>
        </div>
    </div>
</div>


