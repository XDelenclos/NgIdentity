@model  NgCooking.Models.CommunityViewModels
@{ Layout = "~/Views/Shared/_Layout.cshtml";}

<h1 class="page-title">La communauté</h1>

<section class="section">
    <h2 class="title">~ Les meilleures cuistots ~</h2>
    <div class="sort">
        <p>
            <span class="span-label">Trier par :</span>
            <select name="" id="">
                <option value="az">Ordre alphabétique (A->Z)</option>
                <option value="za">Ordre alphabétique (Z->A)</option>
                <option value="exp">Les mieux notés d'abord</option>
                <option value="nov">Les moins bien notés d'abord</option>
                <option value="prod">Les plus productifs d'abord</option>
                <option value="prod_desc">Les moins productifs d'abord</option>
            </select>
        </p>
    </div>
    <div class="users row">
        @foreach (var item in Model.BestCooker)
        {
            <div class="col-xs-6 col-sm-3 user">
                <a href='@Url.Action("details", new { controller = "Community", id = item.BestUser.Id }) '>
                    <img src='@Url.Content("~/Content/"+item.BestUser.picture)' alt="@item.BestUser.firstname @item.BestUser.surname">
                    <div class="text">
                        <p class="name">@item.BestUser.firstname @item.BestUser.surname</p>
                        <p class="level">
                            <span class="stars">
                                @for (int i = 0; i < item.BestUser.level; i++)
                                {
                                    <span class="glyphicon glyphicon-star"></span>
                                }
                                @*<span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>*@
                            </span>
                            <span class="status">
                                @item.UserRate
                        </span>
                    </p>
                </div>
            </a>
        </div>
        }
    </div>
    <div class="row showmore">
        <div class="col-xs-12">
            <button type="button" class="btn btn_color1"><span class="glyphicon glyphicon-chevron-down"></span>Afficher d'avantage</button>
        </div>
    </div>
</section>




